########################################
## <summary>
##	All of the rules required to administrate
##	a alnjl environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`alnjl_admin',`
	gen_require(`
		type alnjl_t;
		type alnjl_initrc_exec_t;
		type alnjl_var_lib_t;
	')

	allow $1 alnjl_t:process { ptrace signal_perms };
	ps_process_pattern($1, alnjl_t)

	alnjl_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 alnjl_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, alnjl_var_lib_t)

')

