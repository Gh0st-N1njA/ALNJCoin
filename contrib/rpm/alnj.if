
## <summary>policy for alnjl</summary>


########################################
## <summary>
##	Transition to alnjl.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`alnjl_domtrans',`
	gen_require(`
		type alnjl_t, alnjl_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, alnjl_exec_t, alnjl_t)
')


########################################
## <summary>
##	Execute alnjl server in the alnjl domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`alnjl_initrc_domtrans',`
	gen_require(`
		type alnjl_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, alnjl_initrc_exec_t)
')


########################################
## <summary>
##	Search alnjl lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`alnjl_search_lib',`
	gen_require(`
		type alnjl_var_lib_t;
	')

	allow $1 alnjl_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
